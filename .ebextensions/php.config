# .ebextensions/php.config
option_settings:
  aws:elasticbeanstalk:container:php:phpini:
    document_root: /

commands:
  01-composer-install:
    command: "composer install"

container_commands:
  01-set-permissions:
    command: "chmod -R 775 /var/app/current/storage /var/app/current/bootstrap/cache"